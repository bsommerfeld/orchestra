<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="de.bsommerfeld.orchestra.ui.controller.ProjectSelectionController"
            prefHeight="500.0" prefWidth="700.0"
            styleClass="project-selection-container">

    <!-- Header -->
    <top>
        <VBox spacing="10" styleClass="header">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Welcome to Orchestra" styleClass="title">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <Label text="Select a project to open" styleClass="subtitle">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Project List -->
    <center>
        <VBox spacing="10" styleClass="content">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Recent Projects" styleClass="section-title">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            <ListView fx:id="projectListView" VBox.vgrow="ALWAYS" onMouseClicked="#onProjectSelected"/>
        </VBox>
    </center>

    <!-- Footer with buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="footer">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="newProjectButton" text="New Project" styleClass="button-primary" onAction="#onNewProject"/>
            <Button fx:id="openProjectButton" text="Open Project" styleClass="button-secondary" onAction="#onOpenProject"/>
            <Button fx:id="deleteProjectButton" text="Delete Project" styleClass="button-danger" onAction="#onDeleteProject"/>
        </HBox>
    </bottom>

</BorderPane>